@model IEnumerable<string>

@{
    bool horizontal = ((bool)(ViewContext.RouteData.Values["horizontalLayout"] ?? false));
    string wrapperClass = horizontal ? "btn-group btn-group-sm btn-groupjustified" : null;
}

<div class="@wrapperClass">
    @Html.ActionLink("Home", "List", "Product",
    new { @class = horizontal ? "btn btn-default btn-sm" : "btn btn-block btn-default btn-lg" })
    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new
        {
            controller = "Product",
            action = "List",
            category = link,
            page = 1
        }, new
        {
            @class = (horizontal ? "btn btn-default btn-sm"
            : "btn btn-block btn-default btn-lg")
            + (link == ViewBag.SlectedCategory ? " btn-primary" : "")
        })
    }
</div>
